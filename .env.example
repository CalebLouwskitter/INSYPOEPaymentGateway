# ==============================================
# INSYPOEPaymentGateway Environment Configuration
# ==============================================
# Copy this file to .env and update with your values

# ==============================================
# Server Configuration
# ==============================================
PORT=5000
NODE_ENV=development

# ==============================================
# SSL/HTTPS Configuration
# ==============================================
# Set to 'true' to enable HTTPS with mkcert certificates
# Set to 'false' to use HTTP (not recommended for production)
USE_HTTPS=true

# ==============================================
# Database Configuration
# ==============================================
# MongoDB Atlas Connection (Production)
CONN_STRING=mongodb+srv://username:<password>@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp

# MongoDB Local Connection (Development)
MONGODB_URI=mongodb://localhost:27017/insy7314

# ==============================================
# JWT Configuration
# ==============================================
# Generate a secure random string for production
# Example: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# ==============================================
# CORS Configuration
# ==============================================
FRONTEND_URL=https://localhost:3000
ALLOWED_ORIGINS=https://localhost:3000,http://localhost:3000

# ==============================================
# API Configuration
# ==============================================
API_VERSION=v1
API_PREFIX=/api

# ==============================================
# Payment Gateway Configuration
# ==============================================
# Add your payment gateway credentials here
PAYMENT_API_KEY=your_payment_api_key
PAYMENT_SECRET=your_payment_secret

# ==============================================
# Email Configuration (Optional)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# ==============================================
# Security Configuration
# ==============================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# Docker Configuration
# ==============================================
DOCKER_MONGODB_PORT=27017
DOCKER_BACKEND_PORT=5000
DOCKER_FRONTEND_PORT=3000
